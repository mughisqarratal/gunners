generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  // ✅ TAMBAHAN RELATION (AMAN)
  passwordResetTokens PasswordResetToken[]
}

model Gallery {
  id        Int            @id @default(autoincrement())
  title     String
  venue     String
  images    GalleryImage[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model GalleryImage {
  id        String  @id
  url       String
  order     Int
  galleryId Int
  gallery   Gallery @relation(fields: [galleryId], references: [id], onDelete: Cascade)

  @@index([galleryId])
}

model Biography {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  bio       String   @db.Text // ✅ WAJIB
  image     String?
  createdAt DateTime @default(now())
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String   @unique
  excerpt   String?
  content   String   @db.Text
  createdAt DateTime @default(now())

  images NewsImage[]
  button NewsButton?
}

model NewsImage {
  id    Int    @id @default(autoincrement())
  image String
  order Int    @default(0)

  newsId Int
  news   News @relation(fields: [newsId], references: [id], onDelete: Cascade)
}

model NewsButton {
  id     Int    @id @default(autoincrement())
  label  String
  url    String
  newsId Int    @unique
  news   News   @relation(fields: [newsId], references: [id], onDelete: Cascade)
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  // ✅ RELATION KE USER
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
